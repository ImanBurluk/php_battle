{
  "name": "imanburluk/textcount",
  "description": "CLI/Library to count text length",
  "type": "library",
  "license": "MIT",
  "keywords": ["text", "length", "utf-8", "cli", "grapheme", "counter"],
  "homepage": "https://github.com/ImanBurluk/textcount",
  "support": {
    "issues": "https://github.com/ImanBurluk/textcount/issues",
    "source": "https://github.com/ImanBurluk/textcount"
  },
  "authors": [
    { "name": "Iman Burluk", "email": "yk9iman@gmail.com" }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-mbstring": "*"
  },
  "suggest": {
    "ext-intl": "Enables grapheme-aware length (grapheme_strlen)."
  },
  "autoload": {
    "psr-4": {
      "Imanburluk\\TextCount\\": "src/TextCount/"
    }
  },
  "bin": [
    "bin/textcount.php"
  ],
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "minimum-stability": "stable",

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "scripts": {
    "lint": "phpcs",
    "lint:fix": "phpcbf",
    "cs:fix": "php-cs-fixer fix --using-cache=yes --verbose",
    "stan": "phpstan analyse -c phpstan.neon",
    "test": "phpunit --colors=always"
  }
}
